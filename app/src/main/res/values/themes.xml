<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Srinivas" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_purple</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/accent_pink</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        
        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/accent_green</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/accent_teal</item>
        <item name="colorOnTertiaryContainer">@color/white</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/card_white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/background_gray</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_gray</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_gray</item>
    </style>
</resources>